<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:id="@+id/layout_boutique"
    >
    <ImageView
        android:id="@+id/iv_boutique_thumb"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:src="@drawable/nopic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_toRightOf="@id/iv_boutique_thumb"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_boutique_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="商品标题"
            android:textColor="#f30"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_boutique_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#f30"
            android:textSize="20dp"
            android:text="商品详情"/>
        <TextView
            android:id="@+id/tv_boutique_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#f30"
            android:textSize="20dp"
            android:text="商品名称"/>

    </LinearLayout>


</LinearLayout>
